/dts-v1/;
#include <nordic/nrf52840_qiaa.dtsi>
#include <zephyr/dt-bindings/input/input-event-codes.h>

&pinctrl {
	pwm0_default: pwm0_default {
		group1 {
			psels = <NRF_PSEL(PWM_OUT0, 0, 6)>,
				<NRF_PSEL(PWM_OUT1, 0, 8)>;
			nordic,drive-mode = <NRF_DRIVE_D0S1>;
		};
	};

	pwm0_sleep: pwm0_sleep {
		group1 {
			psels = <NRF_PSEL(PWM_OUT0, 0, 6)>,
				<NRF_PSEL(PWM_OUT1, 0, 8)>;
			low-power-enable;
		};
	};
};

/ {
	model = "Stryia nRF52840 Receiver P1";
	compatible = "styria_p1_uf2";

	chosen {
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		zephyr,console = &cdc_acm_uart0;
		zephyr,shell-uart = &cdc_acm_uart0;
		zephyr,ieee802154 = &ieee802154;
	};

	nrf_radio_fem: skyFem {
			compatible = "skyworks,sky66112-11", "generic-fem-two-ctrl-pins";
			ctx-gpios = <&gpio0 24 GPIO_ACTIVE_HIGH>;
			ctx-settle-time-us = <1>;
			crx-gpios = <&gpio0 22 GPIO_ACTIVE_HIGH>;
			crx-settle-time-us = <1>;
			tx-gain-db = <22>;
			rx-gain-db = <12>;
	};

	leds {
		compatible = "gpio-leds";
		led0_blue: led_0 {
			gpios = <&gpio0 6 GPIO_ACTIVE_LOW>;
			label = "Blue LED 0";
		};
		led1_red: led_1 {
			gpios = <&gpio0 8 GPIO_ACTIVE_LOW>;
			label = "Red LED 1";
		};
	};

	pwmleds {
		compatible = "pwm-leds";
		blue_pwm_led: blue_pwm_led {
			pwms = <&pwm0 0 PWM_MSEC(1) PWM_POLARITY_NORMAL>;
		};
		red_pwm_led: red_pwm_led {
			pwms = <&pwm0 1 PWM_MSEC(1) PWM_POLARITY_NORMAL>;
		};
	};

	buttons {
		compatible = "gpio-keys";
		button0: button_0 {
			gpios = <&gpio0 13 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;
			label = "Push button switch 0";
			zephyr,code = <INPUT_KEY_0>;
		};
	};

	aliases {
		sw0 = &button0;
		led0 = &led0_blue;
		led1 = &led1_red;
		led0-blue = &led0_blue;
		led1-red = &led1_red;
		pwm-led0 = &blue_pwm_led;
		pwm-led1 = &red_pwm_led;
		watchdog0 = &wdt0;
	};

	zephyr,user {
		led-gpios = <&gpio0 6 GPIO_OPEN_SOURCE>,
			<&gpio0 8 GPIO_OPEN_SOURCE>;
	};
};

&reg1 {
	regulator-initial-mode = <NRF5X_REG_MODE_DCDC>;
};

&radio {
    fem = <&nrf_radio_fem>;
};

&adc {
	status = "okay";
};

&gpio0 {
	status = "okay";
};

&gpiote {
	status = "okay";
};

&uicr {
	nfct-pins-as-gpios;
	gpio-as-nreset;
};

&pwm0 {
	status = "okay";
	pinctrl-0 = <&pwm0_default>;
	pinctrl-1 = <&pwm0_sleep>;
	pinctrl-names = "default", "sleep";
};

&ieee802154 {
	status = "okay";
};

zephyr_udc0: &usbd {
	compatible = "nordic,nrf-usbd";
	status = "okay";
	cdc_acm_uart0: cdc_acm_uart0 {
		compatible = "zephyr,cdc-acm-uart";
	};
};

&cryptocell {
	status = "disabled";
};

&nfct {
	status = "disabled";
};
